<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.taskview.debug.TaskViewDebugFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:id="@+id/forward_button2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/debug_forward_30"
        app:layout_constraintStart_toEndOf="@+id/pause_play_button2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/forward" />

    <ImageButton
        android:id="@+id/pause_play_button2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/debug_pause_play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pause"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/debug_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Lorem Ipsum"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pause_play_button2" />

</androidx.constraintlayout.widget.ConstraintLayout>